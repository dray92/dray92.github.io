<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@android:id/text1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="24sp"
        android:padding="32dp" />


    <TextView
        style="@style/CodeFont"
        android:text="Tester Section"
        android:id="@+id/test" />


    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:baselineAligned="false"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="60dp">
        <TextView
            android:background="@drawable/textview_design_plus"
            style="@style/ScoreKeeperTextPlus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/plus"
            android:gravity="center"
            android:textSize="40dp"
            android:onClick="onClick"
            android:clickable="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:baselineAligned="false"
        android:layout_gravity="center|right"
        android:layout_marginRight="60dp">
        <TextView
            android:background="@drawable/textview_design_minus"
            style="@style/ScoreKeeperTextMinus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/minus"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="40dp"
            android:clickable="true"
            android:onClick="onClick"/>

    </LinearLayout>


</FrameLayout><!-- From: file:/Users/Debosmit/Documents/GitHub/dray92.github.io/code/EffNav1/app/src/main/res/layout-land/fragment_section_scorekeeper.xml -->